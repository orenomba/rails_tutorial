<%

  name_options = {}
  name_options = {class: "disabled", disabled: true} unless @user.new_record?
%>

<%= semantic_form_for @user do |form| %>
  <%= form.input :avatar %>
  <%= form.input :name, input_html: name_options %>
  <%= form.input :email %>
  <%= form.input :password %>
  <%= form.input :password_confirmation %>

  <%= form.actions do %>
    <%= form.action :submit, :as => :button %>
  <% end %>
<% end %>